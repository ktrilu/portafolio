---
interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
  accent?: string;
  icon?: string;
}

const { 
  title, 
  subtitle, 
  class: className = "", 
  accent = "indigo",
  icon
} = Astro.props;

const accentColors = {
  indigo: 'border-indigo-500 dark:border-indigo-400',
  blue: 'border-blue-500 dark:border-blue-400',
  purple: 'border-purple-500 dark:border-purple-400',
  pink: 'border-pink-500 dark:border-pink-400',
  orange: 'border-orange-500 dark:border-orange-400',
  green: 'border-green-500 dark:border-green-400',
  cyan: 'border-cyan-500 dark:border-cyan-400',
  teal: 'border-teal-500 dark:border-teal-400',
  red: 'border-red-500 dark:border-red-400',
  amber: 'border-amber-500 dark:border-amber-400',
};
---

<div class={`group relative overflow-hidden bg-white dark:bg-slate-800 border-2 ${accentColors[accent as keyof typeof accentColors]} paper-shadow hover:shadow-xl transition-all duration-300 hover:-translate-y-1 ${className}`}>
  <!-- Corner fold effect -->
  
  
  <div class="relative p-6 pl-12 h-full flex flex-col">
    {icon && (
      <div class="text-4xl mb-3 transform group-hover:scale-110 transition-transform duration-300">
        {icon}
      </div>
    )}
    
    {title && (
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 relative">
        {title}
        <div class={`absolute -left-10 top-1/2 -translate-y-1/2 w-1 h-6 bg-${accent}-500 dark:bg-${accent}-400`}></div>
      </h3>
    )}
    
    {subtitle && (
      <p class="text-gray-600 dark:text-gray-300 text-sm mb-4">{subtitle}</p>
    )}
    
    <div class="flex-1 text-gray-700 dark:text-gray-200">
      <slot />
    </div>
  </div>
</div>
